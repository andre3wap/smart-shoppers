<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grocerybag"
        android:id="@+id/imageView5"
        android:background="@color/dialogColors" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Shopping list name..."
        android:ems="10"
        android:id="@+id/list_name_et"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_del_btn"
        android:layout_below="@+id/list_name_et"
        android:layout_toRightOf="@+id/list_btn"
        android:layout_toEndOf="@+id/list_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_below="@+id/list_name_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>