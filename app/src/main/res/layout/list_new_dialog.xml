<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grocerybag"
        android:id="@+id/imageView5"
        android:background="@color/dialogColors" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Shopping list name..."
        android:ems="10"
        android:id="@+id/list_name_et"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Set a reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_rem_btn"
        android:layout_below="@+id/list_name_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_del_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/list_rem_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/list_rem_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="None"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_rem_tv"
        android:layout_alignBaseline="@+id/list_rem_btn"
        android:layout_alignBottom="@+id/list_rem_btn"
        android:layout_alignLeft="@+id/list_btn"
        android:layout_alignStart="@+id/list_btn"
        android:layout_marginLeft="20dp" />

</RelativeLayout>